{
  "compilerOptions": {
    "target": "esnext", // Or your desired target environment
    "module": "esnext", // Or your desired module system (e.g., "commonjs")
    "moduleResolution": "node",
    "declaration": true, // Generate declaration files (.d.ts)
    "outDir": "./dist", // Output directory for compiled JS and d.ts files
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*.ts", "src/**/*.vue"] // Include your source files
}